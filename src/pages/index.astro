---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <div class="content">
        <img src="/logos/rlsc.webp" alt="">
        <h1>LEADERBOARD</h1>
        <h2>
            Selecciona un grupo para ver la clasificaci√≥n y resultados de los
            partidos
        </h2>
        <nav class="menu">
            <ul>
                <li><a href="/team-a">GRUPO A</a></li>
                <li><a href="/team-b">GRUPO B</a></li>
                <li><a href="/team-c">GRUPO C</a></li>
                <li><a href="/team-d">GRUPO D</a></li>
            </ul>
        </nav>
    </div>
</Layout>

<style>
    body {
        background-color: rgb(34, 34, 34);
        color: white;
    }

    .content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    h1 {
        font-size: 46px;
        margin: 0;
        margin-top: 2rem;
        margin-bottom: 1rem;
    }

    h2 {
        font-size: 20px;
        font-style: italic;
        font-weight: 500;
        margin: 0;
        margin-bottom: 2rem;
    }

    nav {
        font-size: 14px;
    }

	ul {
		display: flex;
		justify-content: center;
		gap: 50px;
		margin: 1rem 10rem;
	}

	ul li {
		list-style: none;
	}

    ul li a {
        color: rgb(34, 34, 34);
        text-decoration: none;
        transition: all 0.5ms;
        background-color: white;
        border-radius: 20px;
        padding: 10px 20px;
    }

    ul li a:hover {
        background-color: rgb(206, 206, 206);
    }
    
    img {
        width: 50%;
        margin-bottom: 0;
    }
</style>
